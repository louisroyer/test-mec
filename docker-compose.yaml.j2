# SRV6 CONFIG
x-nextmn-srv6: &nextmn-srv6
  restart: always
  build:
    context: ./nextmn-srv6
    args:
      NEXTMNSR_RELEASE: v0.0.7
  image: nextmn-srv6
  cap_add:
    - NET_ADMIN
  sysctls:
    - net.ipv6.conf.all.disable_ipv6=0
    - net.ipv4.ip_forward=1
    - net.ipv6.conf.all.forwarding=1
    - net.ipv6.conf.all.seg6_enabled=1
    - net.ipv6.conf.default.seg6_enabled=1
  command: ["-c", "/etc/nextmn-srv6/config.yaml"]
  devices:
    - "/dev/net/tun:/dev/net/tun"

x-srv6: &srv6
  {{ "nextmn-srv6-ctrl" | with_debug | indent(2)}}
    restart: always
    build:
      context: ./nextmn-srv6-ctrl
      args:
        NEXTMNSRCTRL_RELEASE: v0.0.2
    image: nextmn-srv6-ctrl
    command: ["-c", "/etc/nextmn-srv6-ctrl/config.yaml"]
    container_name: nextmn-srv6-ctrl
    hostname: nextmn-srv6-ctrl
    volumes:
      - ./config/templates/config-nextmn-srv6-ctrl.yaml:/etc/nextmn-srv6-ctrl/config-template.yaml:ro
      - ./config/templates/scripts/config-nextmn-srv6-ctrl.sh:/usr/local/bin/config.sh:ro
    environment:
      TEMPLATE: "/etc/nextmn-srv6-ctrl/config-template.yaml"
      CONFIG_FILE: "/etc/nextmn-srv6-ctrl/config.yaml"
      CONFIG_SCRIPT: "config.sh"
      N4_IP: {{ "10.0.%d.%d" | format(networks.n4.subnet_id, slices.srv6.n4_upf_id) }}
    networks:
      n4:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.n4.subnet_id, slices.srv6.n4_upf_id) }}

  {% for edge in services.srv6_router.dn -%}
  {{ "nextmn-srv6-dn-%s" | format(edge.dnn) | with_debug | indent(2)}}
    <<: *nextmn-srv6
    container_name: nextmn-srv6-dn-{{ edge.dnn }}
    hostname: nextmn-srv6-dn-{{ edge.dnn }}
    volumes:
      - ./config/nextmn-srv6-pre-init-hook.sh:/usr/local/bin/pre-init-hook.sh:ro
      - ./config/nextmn-dn-{{ edge.dnn }}-post-init-hook.sh:/usr/local/bin/post-init-hook.sh:ro
      - ./config/nextmn-dn-{{ edge.dnn }}.yaml:/etc/nextmn-srv6/config.yaml
    networks:
      {{ edge.dnn }}:
        ipv4_address: {{ edge.ipv4 }}
      dataplane:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.dataplane.subnet_id, 129+2+loop.index) }}
        ipv6_address: {{ "fd00:0:0:0:%x:8000:0:%x" | format(networks.dataplane.subnet_id, 2+loop.index) }}
  {% endfor %}
    
  {{ "nextmn-srgw" | with_debug | indent(2)}}
    <<: *nextmn-srv6
    container_name: nextmn-srgw
    hostname: nextmn-srgw
    volumes:
      - ./config/nextmn-srv6-pre-init-hook.sh:/usr/local/bin/pre-init-hook.sh:ro
      - ./config/nextmn-srgw-post-init-hook.sh:/usr/local/bin/post-init-hook.sh:ro
      - ./config/srgw.yaml:/etc/nextmn-srv6/config.yaml
    networks:
      n3:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.n3.subnet_id, 129+1) }}
      dataplane:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.dataplane.subnet_id, 129+1) }}
        ipv6_address: {{ "fd00:0:0:0:%x:8000:0:%x" | format(networks.dataplane.subnet_id, 1) }}

  {{ "nextmn-rr" | with_debug | indent(2)}}
    <<: *nextmn-srv6
    container_name: nextmn-rr
    hostname: nextmn-rr
    volumes:
      - ./config/nextmn-srv6-pre-init-hook.sh:/usr/local/bin/pre-init-hook.sh:ro
      - ./config/nextmn-rr-post-init-hook.sh:/usr/local/bin/post-init-hook.sh:ro
      - ./config/rr.yaml:/etc/nextmn-srv6/config.yaml
    networks:
      dataplane:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.dataplane.subnet_id, 129+2) }}
        ipv6_address: {{ "fd00:0:0:0:%x:8000:0:%x" | format(networks.dataplane.subnet_id, 2) }}
    
# F5GC
x-f5gc: &f5gc
  free5gc-populate:
    image: louisroyer/free5gc-populate
    container_name: free5gc-populate
    hostname: free5gc-populate
    restart: "no" # oneshot
    depends_on:
      - mongodb-f5gc
    command: [" "]
    environment:
      MONGO_HOST: "mongodb-f5gc.db"
      SLICES: |-
        {% for slice in slices %}- sst: {{ slices[slice].nssai.sst }}
          sd: {{ '%06X' | format(slices[slice].nssai.sd) }}
          varqi: 9
          dnn: {{slice}}
      {% endfor -%}
      IMSI: |-
      {%- set ue = namespace(id=1) -%}
      {%for slice in slices %}
        - imsi-00101{{"%010d" | format(ue.id) }}
      {%- set ue.id = ue.id + 1 -%}
      {% endfor %}
    networks:
        db:
  mongodb-f5gc:
    image: mongo
    container_name: mongodb-f5gc
    hostname: mongodb-f5gc
    command: mongod --port 27017 --bind_ip_all
    restart: always
    networks:
      db:

# TODO: SMF paramÃ©trable
  smf:
    container_name: smf
    hostname: smf
    restart: always
    depends_on:
      - nrf
    build:
      context: ./free5gc
      target: free5gc-smf
      args:
        F5GC_RELEASE: v3.2.0
    image: free5gc-smf
    volumes:
      - ./config/ue-routing.yaml:/etc/smf/ue-routing.yaml:ro
      - ./config/templates/config-smf.yaml:/etc/amf/config-template.yaml:ro
      - ./config/templates/scripts/config-smf.sh:/usr/local/bin/config.sh:ro
    environment:
      TEMPLATE: "/etc/smf/config-template.yaml"
      CONFIG_FILE: "/etc/smf/config.yaml"
      CONFIG_SCRIPT: "config.sh"
      BINDING_IP: {{ "10.0.%d.%d" | format(networks.sbi.subnet_id, 129+1) }}
      REGISTER_IP: smf.sbi
      NRF: nrf.sbi
      N4_IP: {{ "10.0.%d.1" | format(networks.n4.subnet_id) }}
      UPF_N4_IP: {{ "10.0.%d.%d" | format(networks.n4.subnet_id, slices.srv6.n4_upf_id) }}
      UPF_N3_IP: {{ slices.srv6.n3_upf_ip }}
      DN_POOL: {{ slices.srv6.pool }}
      DNN: srv6
      SST: {{ slices.srv6.nssai.sst }}
      SD: {{ slices.srv6.nssai.sd }}
    cap_add:
      - NET_ADMIN
    command: --config /etc/smf/config.yaml --uerouting /etc/smf/ue-routing.yaml
    networks:
      n4:
        ipv4_address: {{ "10.0.%d.1" | format(networks.n4.subnet_id) }}
      sbi:
        ipv4_address: {{ "10.0.%d.1" | format(networks.sbi.subnet_id) }}

  amf:
    container_name: amf
    hostname: amf
    restart: always
    depends_on:
      - nrf
    build:
      context: ./free5gc
      target: free5gc-amf
      args:
        F5GC_RELEASE: v3.2.0
    image: free5gc-amf
    volumes:
      - ./config/templates/config-amf.yaml:/etc/amf/config-template.yaml:ro
      - ./config/templates/scripts/config-amf.sh:/usr/local/bin/config.sh:ro
    command: --config /etc/amf/config.yaml
    cap_add:
      - NET_ADMIN
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
    environment:
      TEMPLATE: "/etc/amf/config-template.yaml"
      CONFIG_FILE: "/etc/amf/config.yaml"
      CONFIG_SCRIPT: "config.sh"
      NGAP_IP: "{{ "10.0.%d.%d" | format(networks.n2.subnet_id, 129+1) }}"
      SBI_REGISTER_IP: "amf.sbi"
      SBI_BINDING_IP: "{{ "10.0.%d.%d" | format(networks.sbi.subnet_id, 129+2) }}"
      MCC: "001"
      MNC: "01"
      AMF_ID: "000001"
      AMF_NAME: "AMF"
      NRF_URI: "http://nrf.sbi-net:8000"
      DNN_LIST: "{% for slice in slices %}{{ slice }}{% if not loop.last %} {% endif %}{% endfor %}"
      SST_LIST: "{% for slice in slices %}{{ "%d" | format(slices[slice].nssai.sst) }}{% if not loop.last %} {% endif %}{% endfor %}"
      SD_LIST: "{% for slice in slices %}{{ "%06x" | format(slices[slice].nssai.sd) }}{% if not loop.last %} {% endif %}{% endfor %}"
      TAC: "1"
      LOCALITY: "loc1"
    networks:
      sbi:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.sbi.subnet_id, 129+2) }}
      n2:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.n2.subnet_id, 129+1) }}

  {% for nf in ["nrf", "ausf", "n3iwf", "nssf", "pcf", "udm", "udr"] -%}
  {{ nf }}:
    container_name: {{ nf }}
    hostname: {{ nf }}
    restart: always
    {% if nf != "nrf" -%}
    depends_on:
      - nrf
    {% endif -%}
    build:
      context: ./free5gc
      target: free5gc-{{ nf }}
      args:
        F5GC_RELEASE: v3.2.0
    image: free5gc-{{ nf }}
    environment:
      TEMPLATE: "/etc/{{ nf }}/config-template.yaml"
      CONFIG_FILE: "/etc/{{ nf }}/config.yaml"
      CONFIG_SCRIPT: "config.sh"
      {% if nf != "nrf" -%}
      NRF: nrf.sbi:8000
      {% endif -%}
      {% if nf in ["nrf", "pcf", "udr"] -%}
      MONGO_HOST: "mongodb-free5gc.db"
      {% endif -%}
      BINDING_IP: {{ "10.0.%d.%d" | format(networks.sbi.subnet_id, 129+loop.index+2) }}
      REGISTER_IP: {{ nf }}.sbi
      {%- if nf == "nssf" %}
      SUPPORTED_NSSAIS: |-
        {%for slice in slices %}- sst: {{ slices[slice].nssai.sst }}
          sd: {{ '%06X' | format(slices[slice].nssai.sd) }}{% endfor -%}
      {% endif %}
    volumes:
        - ./config/templates/config-{{ nf }}.yaml:/etc/{{ nf }}/config-template.yaml:ro
        - ./config/templates/scripts/config-{{ nf }}.sh:/usr/local/bin/config.sh:ro
    command: --config /etc/{{ nf }}/config.yaml
    networks:
      sbi:
        ipv4_address: {{ "10.0.%d.%d" | format(networks.sbi.subnet_id, 129+loop.index+2) }}
      {% if nf in ["nrf", "pcf", "udr"] -%}
      db:
      {% endif %}
  {% endfor %}




